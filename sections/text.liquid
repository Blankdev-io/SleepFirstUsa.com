{% liquid
    assign heading = section.settings.heading
    assign content = section.settings.content
    assign font_size = section.settings.font_size
    assign pre = section.settings.pre_heading
    assign align = section.settings.text_align
    assign hierarchy = section.settings.hierarchy
%}

<div class="mx-5 mb-10 dm:max-w-screen-dm dm:mx-auto dm:px-10 ds:mx-9 dl:px-0">
    <div class="bg-white shadow-sp rounded-cl py-6 px-5 ds:py-12 ds:px-10">
        <p class="font-bold text-{{ align }} text-text ds:mb-4">{{ pre }}</p>
        {% if hierarchy == "h2" %}
            <h2 class="text-title text-{{ align }} text-text mb-12 ds:mb-14">{{ heading }}</h2>
        {% else %}
            <h1 class="text-title text-{{ align }} text-text mb-12 ds:mb-14">{{ heading }}</h1>
        {% endif %}
        <div class="text-{{ align }} text-text whitespace-pre-wrap" style="font-size:{{ font_size }}px;">{{ content }}</div>
    </div>
</div>


{% schema %}
{
    "name": "Text section",
    "settings": [
        {
            "type": "text",
            "id": "pre_heading",
            "label": "Pre heading",
            "default": "Pre heading"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<p>Content</p>"
        },
        {
            "type": "range",
            "id": "font_size",
            "min": 12,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Font size",
            "default": 16
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "Text Alignment",
            "options": [
                {
                "value": "left",
                "label": "Left"
                },
                {
                "value": "center",
                "label": "Center"
                },
                {
                "value": "right",
                "label": "Right"
                }
            ],
            "default": "left"
        },
        {
            "type": "radio",
            "id": "hierarchy",
            "label": "Title hierarchy",
            "options": [
                {
                "value": "h1",
                "label": "H1"
                },
                {
                "value": "h2",
                "label": "H2"
                }
            ],
            "default": "h2"
        }
    ],
    "presets": [
        {
            "name": "Text"
        }
    ]
}
{% endschema %}