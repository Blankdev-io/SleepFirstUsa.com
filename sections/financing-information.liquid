<div class="mx-5 dm:max-w-screen-dm dm:mx-auto dm:px-10 ds:mx-9 dl:px-0">
    <div class="text-center text-text bg-white shadow-sp rounded-cl py-10 px-4 ds:px-10">
        <p class="font-extrabold text-2xl mb-5">{{ section.settings.pre_heading }}</p>
        <h2 class="text-title mb-8 tl:pl-10 tl:pr-10">{{ section.settings.heading }}</h2>
        <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12 tl:pl-10 tl:pr-10" style="font-size:{{ font_size }}px;">{{ content }}</div>
    
    <div class="grid grid-cols-1 gap-6 text-text bg-white py-10 px-4 ts:grid-cols-3 ts:gap-3 ds:gap-8 ds:px-10">
        <div class="flex flex-col items-center text-center h-full justify-start">
            <img src="{{ section.settings.svg1 }}" alt="{{ section.settings.svg1.title }}" title="{{ section.settings.svg1.title }}" class="h-14 mb-5">
            <div class="font-bold text-l mb-5">{{ section.settings.heading1 }}</div>
            {% if section.settings.content1 != blank %}
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12 text-l font-semibold content-link">{{ section.settings.content1 }}</div>
            {% endif %}
        </div>
        <div class="flex flex-col items-center text-center h-full justify-start">
            <img src="{{ section.settings.svg2 }}" alt="{{ section.settings.svg2.title }}" title="{{ section.settings.svg2.title }}" class="h-14 mb-5">
            <div class="font-bold text-l mb-5">{{ section.settings.heading2 }}</div>
            {% if section.settings.content2 != blank %}
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12 text-l font-semibold content-link">{{ section.settings.content2 }}</div>
            {% endif %}
        </div>
        <div class="flex flex-col items-center text-center h-full justify-start">
            <img src="{{ section.settings.svg3 }}" alt="{{ svg3.title }}" title="{{ svg3.title }}" class="h-14 mb-5">
            <div class="font-bold text-l mb-5">{{ section.settings.heading3 }}</div>
            {% if section.settings.content3 != blank %}
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12 text-l font-semibold content-link">{{ section.settings.content3 }}</div>
            {% endif %}
        </div>
      </div>
    </div>
</div>

<style>
  .content-link > a {
    color: #384FAE;
    
  }
</style>

{% schema %}
{
    "name": "Financing information",
    "settings": [
        {
            "type": "text",
            "id": "pre_heading",
            "label": "Pre heading",
            "default": "Pre heading"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<p>Content<p>"
        },
        {
            "type": "range",
            "id": "font_size",
            "min": 12,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Font size",
            "default": 16
        },
        {
            "type": "url",
            "id": "svg1",
            "label": "SVG 1"
        },
        {
            "type": "richtext",
            "id": "heading1",
            "label": "Heading 1",
            "default": "<p>Heading 1</p>"
        },
        {
            "type": "richtext",
            "id": "content1",
            "label": "Content 1",
            "default": "<p>Content 1<p>"
        },
        {
            "type": "url",
            "id": "svg2",
            "label": "SVG 2"
        },
        {
            "type": "richtext",
            "id": "heading2",
            "label": "Heading 2",
            "default": "<p>Heading 2</p>"
        },
        {
            "type": "richtext",
            "id": "content2",
            "label": "Content 2",
            "default": "<p>Content 2<p>"
        },
        {
            "type": "url",
            "id": "svg3",
            "label": "SVG 3"
        },
        {
            "type": "richtext",
            "id": "heading3",
            "label": "Heading 3",
            "default": "<p>Heading 3</p>"
        },
        {
            "type": "richtext",
            "id": "content3",
            "label": "Content 3",
            "default": "<p>Content 3<p>"
        } 
    ],
    "presets": [
        {
            "name": "Text with buttons"
        }
    ]
}
{% endschema %}