{% liquid 
    assign heading = section.settings.heading
    assign hierarchy = section.settings.hierarchy
    assign sub = section.settings.sub
    assign video = section.settings.video
    assign image1 = section.settings.image1
    assign heading1 = section.settings.heading1
    assign content1 = section.settings.content1
    assign image2 = section.settings.image2
    assign heading2 = section.settings.heading2
    assign content2 = section.settings.content2
    assign image3 = section.settings.image3
    assign heading3 = section.settings.heading3
    assign content3 = section.settings.content3
    assign image4 = section.settings.image4
    assign heading4 = section.settings.heading4
    assign content4 = section.settings.content4
%}

<div class="mx-5 mb-10 dm:max-w-screen-dm dm:mx-auto dm:px-10 ds:mx-9 dl:px-0">
    {% if heading != blank %}
        {% if hierarchy == "h2" %}
            <h2 class="font-extrabold text-[32px] text-center text-text mb-4">{{ heading }}</h2>  
        {% else %}
            <h1 class="font-extrabold text-[32px] text-center text-text mb-4">{{ heading }}</h1>   
        {% endif %}  
    {% endif %}
    {% if sub != blank %}
        <div class="font-medium text-center text-text mb-10">{{ sub }}</div>
    {% endif %}
    {% if heading3 == blank and heading4 == blank %}
        <div class="grid grid-cols-1 gap-6 text-text bg-white shadow-sp rounded-cl py-10 px-4 ts:grid-cols-2 ts:gap-3 ds:gap-8 ds:px-10">
            <div class="flex flex-col items-center gap-4 text-center">
                <img src="{{ image1 | image_url }}" alt="{{ image1.alt }}" title="{{ image1.title }}" class="h-28 mb-5">
                <h2 class="font-bold text-2xl mb-4">{{ heading1 }}</h2>
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12">{{ content1 }}</div>
            </div>
            <div class="flex flex-col items-center gap-4 text-center">
                <img src="{{ image2 | image_url }}" alt="{{ image2.alt }}" title="{{ image2.title }}" class="h-28 mb-5">
                <h2 class="font-bold text-2xl mb-4">{{ heading2 }}</h2>
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12">{{ content2 }}</div>
            </div>
        </div>
    {% else %}
        <div class="grid grid-cols-1 gap-6 text-text bg-white shadow-sp rounded-cl py-10 px-4 ts:grid-cols-2 ts:gap-3 ds:grid-cols-4 ds:gap-8 ds:px-10">
            <div class="flex flex-col items-center gap-4 text-center">
                <img src="{{ image1 | image_url }}" alt="{{ image1.alt }}" title="{{ image1.title }}" class="h-28 mb-5">
                <h2 class="font-bold text-2xl mb-4">{{ heading1 }}</h2>
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12">{{ content1 }}</div>
            </div>
            <div class="flex flex-col items-center gap-4 text-center">
                <img src="{{ image2 | image_url }}" alt="{{ image2.alt }}" title="{{ image2.title }}" class="h-28 mb-5">
                <h2 class="font-bold text-2xl mb-4">{{ heading2 }}</h2>
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12">{{ content2 }}</div>
            </div>
            <div class="flex flex-col items-center gap-4 text-center ">
                <img src="{{ image3 | image_url }}" alt="{{ image3.alt }}" title="{{ image3.title }}" class="h-28 mb-5">
                <h2 class="font-bold text-2xl mb-4">{{ heading3 }}</h2>
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12">{{ content3 }}</div>
            </div>
            <div class="flex flex-col items-center gap-4 text-center">
                <img src="{{ image4 | image_url }}" alt="{{ image4.alt }}" title="{{ image4.title }}" class="h-28 mb-5">
                <h2 class="font-bold text-2xl mb-4">{{ heading4 }}</h2>
                <div class="flex flex-col gap-1 whitespace-pre-wrap mb-10 ds:mb-12">{{ content4 }}</div>
            </div>
        </div>
    {% endif %}
</div>


