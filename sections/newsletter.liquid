{% liquid
    assign heading = section.settings.heading
%}

<div class="mb-10 mx-5 dm:max-w-screen-dm dm:mx-auto dm:px-10 ds:mx-9 dl:px-0">
    <div class="grid justify-center bg-white shadow-sp rounded-cl py-6 px-8 ds:py-16">
        <h2 class="justify-self-center font-extrabold text-3xl text-center text-text max-w-2xl mb-6 mm:text-title">{{ heading }}</h2>
        {% form 'contact' %}
            {{ form.errors | default_errors }}
            <div class="ds:flex ds:justify-center">
                <div class="email">
                    <input type="email" name="contact[email]" id="email" placeholder="Email Address" class="border-accent-3 border-solid border-[1px] rounded-full h-[45px] w-full mb-5 px-5 ds:w-96 ds:mr-2"/>
                </div>
                <div class="submit grid">
                    <input type="submit" value="Sing Up" class="button cursor-pointer"/>
                </div>               
            </div>
        {% endform %}
    </div>
</div>


{% schema %}
{
    "name": "Newsletter",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Newsletter"
        }
    ],
    "presets": [
        {
            "name": "Newsletter"
        }
    ]
}
{% endschema %}