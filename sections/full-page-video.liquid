{% liquid 
    assign heading = section.settings.heading
    assign hierarchy = section.settings.hierarchy
    assign sub = section.settings.sub
    assign video = section.settings.video
%}

<div class="mb-10">
    <div class="py-10 mx-5 dm:max-w-screen-dm dm:mx-auto dm:px-10 ds:mx-9 dl:px-0">
        {% if heading != blank %}
            {% if hierarchy == "h2" %}
                <h2 class="font-extrabold text-[32px] text-center text-text mb-4">{{ heading }}</h2>  
            {% else %}
                <h1 class="font-extrabold text-[32px] text-center text-text mb-4">{{ heading }}</h1>   
            {% endif %}  
        {% endif %}
        {% if sub != blank %}
            <div class="font-medium text-center text-text mb-10">{{ sub }}</div>
        {% endif %}
    </div>
    {% if video != blank %}
        <video class="w-full" autoplay muted loop>
            <source src="{{ video.sources[1].url }}">
            Your browser does not support the video tag.
        </video>
    {% endif %}
</div>


{% schema %}
{
    "name": "Full page video",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "radio",
            "id": "hierarchy",
            "label": "Title hierarchy",
            "options": [
                {
                "value": "h1",
                "label": "H1"
                },
                {
                "value": "h2",
                "label": "H2"
                }
            ],
            "default": "h2"
        },
        {
            "type": "richtext",
            "id": "sub",
            "label": "Sub-title"
        },
        {
            "type": "video",
            "id": "video",
            "label": "Video"
        }
    ],
    "presets": [
        {
        "name": "Full page video"
        }
    ]
}
{% endschema %}