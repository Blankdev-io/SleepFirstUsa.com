{% liquid
    assign heading = section.settings.heading
    assign hierarchy = section.settings.hierarchy
    assign button1 = section.settings.button1
    assign url1 = section.settings.url1
    assign button2 = section.settings.button2
    assign url2 = section.settings.url2
    assign button3 = section.settings.button3
    assign url3 = section.settings.url3
%}

<div class="mx-5 mb-10 dm:max-w-screen-dm dm:mx-auto dm:px-10 ds:mx-9 dl:px-0">
    <div class="text-center text-text bg-white shadow-sp rounded-cl py-10 px-4 ds:px-10">
        {% if hierarchy == "h2" %}
            <h2 class="text-title mb-10 ds:mb-12">{{ heading }}</h2>
        {% else %}
            <h1 class="text-title mb-10 ds:mb-12">{{ heading }}</h1>
        {% endif %}
        <div class="flex justify-center flex-wrap gap-4 ds:gap-10">
            {% if button1 != blank %}
                <a href="{{ url1 }}" title="{{ url1.title }}" class="button order-1 !bg-accent-4 !w-[210px] ts:order-2">{{ button1 }}</a>
            {% endif %}
            {% if button2 != blank %}
                <a href="{{ url2 }}" title="{{ url2.title }}" class="button order-2 !bg-accent-4 !w-[210px] ts:order-1">{{ button2 }}</a>
            {% endif %}
            {% if button3 != blank %}
                <a href="{{ url3 }}" title="{{ url3.title }}" class="button order-3 !bg-accent-4 !w-[210px]">{{ button3 }}</a>
            {% endif %}
        </div>
    </div>
</div>


{% schema %}
{
    "name": "QR Landing Section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
        },
        {
            "type": "radio",
            "id": "hierarchy",
            "label": "Title hierarchy",
            "options": [
                {
                "value": "h1",
                "label": "H1"
                },
                {
                "value": "h2",
                "label": "H2"
                }
            ],
            "default": "h2"
        },
        {
            "type": "text",
            "id": "button1",
            "label": "Button Label 1"
        },
        {
            "type": "url",
            "id": "url1",
            "label": "Button URL 1"
        },
        {
            "type": "text",
            "id": "button2",
            "label": "Button Label 2"
        },
        {
            "type": "url",
            "id": "url2",
            "label": "Button URL 2"
        },
        {
            "type": "text",
            "id": "button3",
            "label": "Button Label 3"
        },
        {
            "type": "url",
            "id": "url3",
            "label": "Button URL 3"
        }
    ],
    "presets": [
        {
            "name": "QR Landing Section"
        }
    ]
}
{% endschema %}