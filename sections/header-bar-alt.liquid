{% liquid 
    assign color = section.settings.color
    assign ann_enable = section.settings.ann_enable
    assign url = section.settings.url
    assign btn_color = section.settings.btn_color
    assign custom_url_1 = section.settings.custom_url_1
    assign custom_url_2 = section.settings.custom_url_2 
    assign custom_text_1 = section.settings.custom_text_1
    assign text_color1 = section.settings.text_color1
    assign custom_text_2 = section.settings.custom_text_2
    assign text_color2 = section.settings.text_color2
%}

{% if ann_enable %}
<div class="shadow-sp pt-4 pb-6 mb-10" style="background-color:{{ color }};">
    <div class="flex justify-center items-center mx-5 dm:max-w-screen-dm dm:mx-auto dm:px-10 ts:justify-evenly ds:mx-9 dl:px-0">
        <a class="hidden gap-2 rounded-full py-1 px-3 ts:flex ts:items-center ts:justify-center ts:w-[200px]" href="{{ custom_url_1 }}" style="background-color:{{ btn_color }};">
            <div class="flex items-center h-6">
                {% render 'icons', icon: 'mail-white' %}
            </div>
            <p class="text-xl font-semibold" style="color:{{ text_color1 }};">{{ custom_text_1 }}</p>
        </a>
        <a href="{{ url }}" class="flex justify-center items-center">
            <div class="flex items-center h-12">
                {% render 'icons', icon: 'logo' %}
            </div>
        </a>
        <a class="hidden gap-2 rounded-full py-1 px-3 ts:flex ts:items-center ts:justify-center ts:w-[200px]" href="{{ custom_url_2 }}" style="background-color:{{ btn_color }};">
            <div class="flex items-center h-6">
                {% render 'icons', icon: 'phone-white' %}
            </div>
            <p class="text-xl font-semibold" style="color:{{ text_color2 }};">{{ custom_text_2 }}</p>
        </a>
    </div>
</div>
{% endif %}


{% schema %}
{
    "name": "Header Bar Alternative",
    "settings": [
        {
            "type": "color",
            "id": "color",
            "label": "Bar Color",
            "default": "#7992EB"
        },
        {
            "type": "checkbox",
            "id": "ann_enable",
            "label": "Enable announcement bar",
            "default": true
        },
        {
            "type": "url",
            "id": "url",
            "label": "Bar URL"
        },
        {
            "type": "color",
            "id": "btn_color",
            "label": "Buttons Color",
            "default": "#FFF"
        },
        {
            "type": "url",
            "id": "custom_url_1",
            "label": "Custom URL 1"
        },
        {
            "type": "text",
            "id": "custom_text_1",
            "label": "Custom text 1"
        },
        {
            "type": "color",
            "id": "text_color1",
            "label": "Custom text color 1",
            "default": "#384FAE"
        },
        {
            "type": "url",
            "id": "custom_url_2",
            "label": "Custom URL 2"
        },
        {
            "type": "text",
            "id": "custom_text_2",
            "label": "Custom text 2"
        },
        {
            "type": "color",
            "id": "text_color2",
            "label": "Custom text color 2",
            "default": "#384FAE"
        }
    ]
}
{% endschema %}